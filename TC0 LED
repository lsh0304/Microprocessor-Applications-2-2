//        sec++;
//    }
}

void Get_Freq(int a){
    unsigned long freq=(unsigned long)8000000/(1+a);
    unsigned int freq_khz=freq/1000;
    unsigned int freq_pnt=(freq%1000)/10;

    NumbertoFourDigit(freq_khz);
    write_data('.');
    if((freq_pnt<10)&(freq_pnt!=0)){
        write_data(0x30);
        NumbertoTwoDigit(freq_pnt);
    }
    else if(!freq_pnt){
        write_data(0x30);
        write_data(0x30);
    }
    else{
        NumbertoTwoDigit(freq_pnt);
    }
}
